extends ../../layouts/default.pug 

block main 
    h1(class="mb-4") #{pageTitle} 

    form(
        action=`/${prefixAdmin}/songs/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tieu de 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required 
            )
        div(class="form-group")
            label(for="topic") Chu de 
            select(
                name="topicId"
                id="topic"
                class="form-control"
                required 
            )
                option(value="" disabled selected) -- Chon chu de -- 
                each item in topics
                    option(value=item.id) #{item.title} 

        div(class="form-group")
            label(for="singer") Ca si 
            select(
                name="singerId"
                id="singer"
                class="form-control"
                required 
            )
                option(value="" disabled selected) -- Chon ca si --
                each item in singers 
                    option(value=item.id) #{item.fullName} 
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Anh 
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input 
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview 
            )
        div(class="form-group" upload-audio)
            label(for="audio") File am thanh 
            input(
                type="file"
                class="form-control-file"
                id="audio"
                name="audio"
                accept="audio/*"
                upload-audio-input
            ) 
            audio(controls upload-audio-play)
                source(src="") 
        div(class="form-group")
            label(for="lyrics") Loi bai hat 
            textarea(
                class="form-control"
                id="lyrics"
                name="lyrics"
                row="20"
            )
        div(class="form-group")
            label(for="desc") Mo ta 
            textarea(
                type="text"
                class="form-control"
                id="desc"
                name="description"
                rows="5"
                textarea-mce
            ) 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked 
            )
            label(for="statusActive" class="form-check-label") Hoat dong 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked 
            )
            label(for="statusInActive" class="form-check-label") Dung hoat dong 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tao moi 
        